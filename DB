-- Create the database (if needed)
CREATE DATABASE leadfinder;

-- Use the database
\c leadfinder;
-- Enable UUID extension
CREATE EXTENSION IF NOT EXISTS "uuid-ossp";

-- 1. Create users table
CREATE TABLE users (
    id SERIAL PRIMARY KEY,
    uuid UUID DEFAULT uuid_generate_v4() UNIQUE NOT NULL,
    name  VARCHAR(255),
    email VARCHAR(255) UNIQUE NOT NULL,
    password VARCHAR(255) NOT NULL,
    is_verified BOOLEAN DEFAULT FALSE,
    otp_code VARCHAR(6),
    otp_expiry TIMESTAMP,
    is_active BOOLEAN DEFAULT TRUE,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT NULL
);

-- 2. Create searches table
CREATE TABLE searches (
    id SERIAL PRIMARY KEY,
    uuid UUID DEFAULT uuid_generate_v4() UNIQUE NOT NULL,
    user_uuid UUID NOT NULL,
    query VARCHAR(500) NOT NULL,
    latitude DECIMAL(10, 8),
    longitude DECIMAL(11, 8),
    address TEXT,
    radius INTEGER NOT NULL,
    category VARCHAR(50),
    results JSONB,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    
    -- Foreign key constraint using UUID
    CONSTRAINT fk_searches_user_uuid 
        FOREIGN KEY (user_uuid) 
        REFERENCES users(uuid) 
        ON DELETE RESTRICT
);

-- 3. Create indexes for better performance
CREATE INDEX idx_users_uuid ON users(uuid);
CREATE INDEX idx_users_email ON users(email);
CREATE INDEX idx_users_is_active ON users(is_active);
CREATE INDEX idx_searches_uuid ON searches(uuid);
CREATE INDEX idx_searches_user_uuid ON searches(user_uuid);
CREATE INDEX idx_searches_created_at ON searches(created_at DESC);

-- Create tokens table
CREATE TABLE tokens (
    id SERIAL PRIMARY KEY,
    uuid UUID DEFAULT uuid_generate_v4() UNIQUE NOT NULL,
    user_uuid UUID NOT NULL,
    token VARCHAR(500) NOT NULL,
    token_type VARCHAR(50) NOT NULL,
    expires_at TIMESTAMP NOT NULL,
    is_active BOOLEAN DEFAULT TRUE,
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
    updated_at TIMESTAMP DEFAULT NULL,
    
    -- Foreign key constraint
    CONSTRAINT fk_tokens_user_uuid 
        FOREIGN KEY (user_uuid) 
        REFERENCES users(uuid) 
        ON DELETE RESTRICT
);

-- Create indexes for better performance
CREATE INDEX idx_tokens_uuid ON tokens(uuid);
CREATE INDEX idx_tokens_user_uuid ON tokens(user_uuid);
CREATE INDEX idx_tokens_token ON tokens(token);
CREATE INDEX idx_tokens_expires_at ON tokens(expires_at);
CREATE INDEX idx_tokens_is_active ON tokens(is_active);

-- Add name field to users table if it doesn't exist (for existing databases)
ALTER TABLE users ADD COLUMN IF NOT EXISTS name VARCHAR(255);

